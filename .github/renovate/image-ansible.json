{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": [
        "image:ansible"
      ],
      "matchFileNames": [
        "images/homelab-workspace/packages/ansible-*"
      ]
    },
    {
      "addLabels": [
        "image:ansible"
      ],
      "matchFileNames": [
        "images/homelab-workspace/packages/pipx-*"
      ],
      "matchPackageNames": [
        "ansible-core"
      ]
    }
  ]
}
