{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "automerge": false,
      "commitMessageTopic": "{{packageName}}",
      "description": "stability required dependencies: npm-minor-60d",
      "groupName": "{{datasource}}-{{depNameSanitized}}",
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "fluxcd/flux2",
        "hashicorp/terraform",
        "kubernetes-sigs/kustomize"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "minimumReleaseAge": "60 days",
      "semanticCommitType": "feat"
    },
    {
      "automerge": false,
      "commitMessageTopic": "{{packageName}}",
      "description": "stability required dependencies: npm-minor-90d",
      "groupName": "{{datasource}}-{{depNameSanitized}}",
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "hashicorp/packer",
        "kubernetes/kubernetes"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "minimumReleaseAge": "90 days",
      "semanticCommitType": "feat"
    },
    {
      "automerge": false,
      "commitMessageTopic": "{{packageName}}",
      "description": "stability required dependencies: pypi-minor-90d",
      "groupName": "{{manager}}",
      "matchManagers": [
        "pip_requirements"
      ],
      "matchPackageNames": [
        "ansible-core"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "minimumReleaseAge": "90 days",
      "semanticCommitType": "feat"
    },
    {
      "automerge": false,
      "commitBody": "BREAKING CHANGE",
      "commitMessageTopic": "{{packageName}}",
      "description": "stability required dependencies: npm-major-180d",
      "groupName": "{{datasource}}-{{depNameSanitized}}",
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "fluxcd/flux2",
        "hashicorp/terraform",
        "hashicorp/packer",
        "kubernetes/kubernetes",
        "kubernetes-sigs/kustomize"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "180 days",
      "semanticCommitType": "feat"
    },
    {
      "automerge": false,
      "commitMessageTopic": "{{packageName}}",
      "description": "stability required dependencies: pypi-major-180d",
      "groupName": "{{manager}}",
      "matchManagers": [
        "pip_requirements"
      ],
      "matchPackageNames": [
        "ansible-core"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "180 days",
      "semanticCommitType": "feat"
    },
    {
      "automerge": false,
      "commitMessageTopic": "{{packageName}}",
      "description": "delay upgrading ubuntu major versions till 270 days from release (to allow time for compatibility fixes to other packages)",
      "groupName": "{{datasource}}-{{depNameSanitized}}",
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "ubuntu"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "270 days",
      "semanticCommitType": "feat"
    }
  ]
}
